<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.machapp.udemyandroid.smartbanca.MainActivity">

    <ImageView
        android:id="@+id/imageLogo"
        android:layout_width="@dimen/larguraLogo"
        android:layout_height="@dimen/altura"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="17dp"
        android:background="@drawable/logo"
        app:srcCompat="@/logo"
        tools:layout_editor_absoluteX="92dp"
        tools:layout_editor_absoluteY="16dp" />

    <Button
        android:id="@+id/btnConsultar"
        android:layout_width="@dimen/larguraBotao"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/imageLogo"
        android:layout_marginStart="28dp"
        android:layout_marginTop="57dp"
        android:text="Consultar"
        android:textSize="@dimen/textoBotao"
        tools:layout_editor_absoluteX="48dp"
        tools:layout_editor_absoluteY="261dp" />

    <Button
        android:id="@+id/btnCadastrar"
        android:layout_width="@dimen/larguraBotao"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btnConsultar"
        android:layout_alignBottom="@+id/btnConsultar"
        android:layout_marginStart="26dp"
        android:layout_toEndOf="@+id/btnConsultar"
        android:text="Cadastrar"
        android:textSize="@dimen/textoBotao"
        tools:layout_editor_absoluteX="258dp"
        tools:layout_editor_absoluteY="261dp" />

    <Button
        android:id="@+id/btnExcluir"
        android:layout_width="@dimen/larguraBotao"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/btnConsultar"
        android:layout_below="@+id/btnConsultar"
        android:layout_marginTop="23dp"
        android:text="Excluir"
        android:textSize="@dimen/textoBotao" />

    <Button
        android:id="@+id/btnAlterar"
        android:layout_width="@dimen/larguraBotao"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/btnCadastrar"
        android:layout_alignTop="@+id/btnExcluir"
        android:text="Alterar"
        android:textSize="@dimen/textoBotao" />

    <Button
        android:id="@+id/btnEstoque"
        android:layout_width="@dimen/larguraBotao"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/btnExcluir"
        android:layout_below="@+id/btnExcluir"
        android:layout_marginTop="23dp"
        android:text="Estoque"
        android:textSize="@dimen/textoBotao" />

    <TextView
        android:id="@+id/textPeriodicos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageLogo"
        android:layout_centerHorizontal="true"
        android:text="PERIODICOS"
        android:textSize="36sp" />

    <Button
        android:id="@+id/btnSair"
        android:layout_width="@dimen/larguraBotao"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/btnAlterar"
        android:layout_alignTop="@+id/btnEstoque"
        android:text="Sair"
        android:textSize="@dimen/textoBotao" />

</RelativeLayout>
